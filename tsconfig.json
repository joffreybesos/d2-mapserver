{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "outDir": "build/",
        "sourceMap": false,
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "allowJs": true,
        "lib": [
            "es2016",
            "dom",
            "es5"
        ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}